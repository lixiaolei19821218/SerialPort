<Window x:Class="Monitor.View.RouteModify"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="线路调整" Height="300" Width="300" ResizeMode="CanMinimize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="线路列表" Margin="5">
            <ListBox Name="routeList" ItemsSource="{Binding Path=Routes}" DisplayMemberPath="Name"></ListBox>
        </GroupBox>
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>                
            </Grid.RowDefinitions>
            <Button Content="上移" Command="{Binding Path=UpCommand}" CommandParameter="{Binding ElementName=routeList, Path=SelectedItem}"/>
            <Button Grid.Row="1" Content="下移" Command="{Binding Path=DownCommand}" CommandParameter="{Binding ElementName=routeList, Path=SelectedItem}"/>           
        </Grid>
    </Grid>
</Window>
